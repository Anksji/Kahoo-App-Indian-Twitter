<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:popupMenuStyle">@style/menuStyle</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/menuStyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="dialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="menuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@color/dark_primary_700</item>
        <item name="android:colorBackground">@color/dark_primary_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="profileEditTextHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>


    <style name="profileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/transparent</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="more_menu_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="backIconStyle">
        <item name="android:layout_width">@dimen/_42sdp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:tint">@color/white</item>
        <item name="background">@drawable/normal_ripple</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
    </style>
    <style name="icon_img_style">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="tollbarHeadingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/toolbar_heading_title</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="createkahooEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">@dimen/da_spacing_standard</item>
        <item name="android:drawableTint">@color/grey_600</item>
        <item name="android:padding">@dimen/da_spacing_middle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/da_font_size_normal</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="theme_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:background">@drawable/primary_rect_button</item>
    </style>

    <style name="app_bottom_theme">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="menuTextStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/dark_primary_700</item>
    </style>


</resources>