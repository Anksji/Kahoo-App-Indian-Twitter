<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_16sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:elevation="@dimen/_3sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/user_image"
                    android:src="@color/white"
                    android:background="@color/dark_primary_400"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_primary_200"
                android:text="in reply to yuva"
                android:layout_marginLeft="@dimen/_2sdp"
                android:visibility="gone"
                android:id="@+id/reply_text"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableLeft="@drawable/ic_reply_small"
                android:layout_marginBottom="-6dp"
                android:textSize="@dimen/_14sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/dark_primary_400"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/dark_primary_400"/>

            <View
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_24sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/dark_primary_400"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/kaho_media_content_holder"
                android:layout_marginLeft="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:elevation="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/dark_primary_400">

                    </ImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_14sdp"
                android:textColor="@color/dark_primary_200"
                android:text="24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:background="@color/dark_primary_400"
                android:textSize="@dimen/_15sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_14sdp"
                android:textColor="@color/dark_primary_200"
                android:text="24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:background="@color/dark_primary_400"
                android:textSize="@dimen/_15sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_14sdp"
                android:textColor="@color/dark_primary_200"
                android:text="24"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:background="@color/dark_primary_400"
                android:textSize="@dimen/_15sdp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/dark_primary_50"/>

</LinearLayout>