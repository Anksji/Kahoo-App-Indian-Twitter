<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <RelativeLayout
        android:id="@+id/rlBottom"
        android:background="@drawable/bg_top_shadow"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/da_spacing_middle"
            android:paddingBottom="@dimen/da_spacing_middle">


            <EditText
                android:id="@+id/type_your_cmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/share_your_thoughts"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/white"
                android:textColorHint="@color/dark_primary_300"
                android:paddingStart="@dimen/da_spacing_middle"
                android:paddingEnd="@dimen/da_spacing_middle"
                android:paddingTop="@dimen/da_spacing_control"
                android:paddingBottom="@dimen/da_spacing_control"
                android:inputType="textCapSentences|textMultiLine|textImeMultiLine"
                android:background="@drawable/rounded_stroked"
                android:layout_marginStart="@dimen/da_spacing_standard"
                android:layout_marginEnd="@dimen/_46sdp">
                <requestFocus/>
            </EditText>
            <!--<EditText
                android:id="@+id/type_your_cmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:hint="@string/add_your_reply"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/da_spacing_middle"
                android:paddingEnd="@dimen/da_spacing_middle"
                android:paddingTop="@dimen/da_spacing_control"
                android:paddingBottom="@dimen/da_spacing_control"
                android:background="@drawable/rounded_stroked"
                android:layout_marginStart="@dimen/da_spacing_standard"
                android:layout_marginEnd="@dimen/_46sdp"
                android:textSize="@dimen/_15sdp"
                />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reply_to_name"
                android:text="Name of User"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:elevation="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:paddingRight="8dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5.5dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/main_button_color"/>

            <ImageView
                android:id="@+id/ivSend"
                android:layout_height="@dimen/_30sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_send_button"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/da_spacing_control"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>